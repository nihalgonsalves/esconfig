{
  "name": "@nihalgonsalves/esconfig",
  "version": "0.1.0",
  "description": "Shared ECMAScript Config (TS, Lint, Prettier)",
  "main": "index.js",
  "repository": "git@github.com:nihalgonsalves/esconfig.git",
  "author": "Nihal Gonsalves <nihal@nihalgonsalves.com>",
  "license": "MIT",
  "files": [
    "eslint-rules-base.js",
    ".eslintrc.js",
    ".eslintrc.react.js",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "eslint": "^8.5.0",
    "eslint-define-config": "^1.2.1",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "eslint": "^8.5.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
