{
  "name": "@nihalgonsalves/esconfig",
  "version": "0.2.0",
  "description": "Shared ECMAScript Config (TS, Lint, Prettier)",
  "main": "index.js",
  "repository": "git@github.com:nihalgonsalves/esconfig.git",
  "author": "Nihal Gonsalves <nihal@nihalgonsalves.com>",
  "license": "MIT",
  "files": [
    "eslint-rules-base.js",
    ".eslintrc.js",
    ".eslintrc.react.js",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "eslint": "^8.15.0",
    "eslint-define-config": "^1.4.1",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "eslint": "^8.15.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  }
}
